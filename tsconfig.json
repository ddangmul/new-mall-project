{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["next-auth", "jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false, // 암시적인 any 사용 허용
    "strictNullChecks": false, // null과 undefined에 대한 엄격한 검사 비활성화
    "noUnusedLocals": false, // 사용하지 않는 로컬 변수에 대해 에러 발생 안 함
    "noUnusedParameters": false, // 사용하지 않는 매개변수에 대해 에러 발생 안 함
    "noImplicitReturns": false, // 반환 값 명시 요구하지 않음
    "noImplicitThis": false // this 타입을 명시적으로 설정하지 않아도 됨
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "prisma/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
